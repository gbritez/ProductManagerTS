<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="{{product.thumbnail}}" class="img-fluid rounded" alt="Product Image">
        </div>
        <div class="col-md-6">
            <h2>{{product.title}}</h2>
            <p class="lead">{{product.description}}</p>
            <p class="h4 text-primary">$ {{product.price}}</p>
            <button onclick="addToCart('{{{product._id}}}')" class="btn btn-primary">Add to Cart</button>
        </div>
    </div>
</div>
<script src="/js/product.js"></script>